<%@page import="model.cate_dto"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<%
	cate_dto cd = (cate_dto)request.getAttribute("cd");
	if(cd == null){
%>    
	<script>
	alert("올바른 접근이 아닙니다.");
	history.go(-1);
	</script>
<%
	} else {
%>		

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>카테고리 수정</title>
    <link rel="stylesheet" href="../css/index.css">
    <link rel="stylesheet" href="css/cate_insert.css">
</head>
<body>
    <header>
	<%@ include file="/admin/top.jsp" %>
    </header>
    <main>
        <div class="cate-insert-container">
            <div class="form-header">
                <h1>카테고리 수정</h1>
                <p>카테고리 정보를 수정하실 수 있습니다.</p>
            </div>

            <form id="frm" class="cate-insert-form" onsubmit="return modify_check()">
            	<input type="hidden" name="cate_code" value="<%=cd.getCate_name()%>">
                <div class="form-section">
                    <h2>카테고리 정보</h2>

                    <div class="form-group">
                        <label class="form-label">카테고리 코드 <span class="required">*</span></label>
                        <div class="input-wrapper">
                            <input type="text" value="<%=cd.getCate_name()%>" class="input-field input-code" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">카테고리명 <span class="required">*</span></label>
                        <input type="text" name="cate_name" value="<%=cd.getCate_name()%>" class="input-field input-name" placeholder="카테고리명을 입력하세요">
                    </div>

                    <div class="form-group">
                        <label class="form-label">카테고리 관리 <span class="required">*</span></label>
                        <div class="radio-group">
                            <div class="radio-item">
                                <input type="radio" name="cate_use" value="Y" class="radio-input">
                                <label class="radio-label">사용</label>
                            </div>
                            <div class="radio-item">
                                <input type="radio" name="cate_use" value="N" class="radio-input">
                                <label class="radio-label">미사용</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-submit">카테고리 수정</button>
                    <a href="cate_list.do" class="btn-list">카테고리 목록</a>
                </div>
            </form>
        </div>
    </main>

    <footer>
      <%@ include file="/admin/footer.jsp" %>
    </footer>
</body>
<script>
	var useck = '<%=cd.getCate_use()%>';
	if(useck=="Y"){
		frm.cate_use[0].checked = true;
	}
	else {
		frm.cate_use[1].checked = true;
	}
</script>
<script src="./js/cate_modify.js">

</script>
<%
	}
%>
</html>
